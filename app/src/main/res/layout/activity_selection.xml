<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"

    android:background="@drawable/med1"

    android:orientation="vertical"

    tools:context=".datasave">







    <TextView
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:layout_marginTop="100dp"
        android:textStyle="italic"
        android:textSize="17dp"
        android:text="Choose blood group from below:"/>


    <Spinner
        android:id="@+id/catagoryid"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:spinnerMode="dialog"
        android:layout_gravity="center"


        android:entries="@array/blood"


        android:backgroundTint="#ff22"


        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="245dp" />
    <TextView
        android:layout_width="250dp"
        android:layout_height="22dp"
        android:layout_marginTop="5dp"
        android:textSize="17dp"
        android:textStyle="italic"
        android:text="Choose Location from below:"/>
    <Spinner
        android:id="@+id/locationid"
        android:layout_width="200dp"
        android:layout_height="45dp"

        android:spinnerMode="dropdown"

        android:entries="@array/loc"
        android:layout_gravity="center"
        android:backgroundTint="#ff22"

        android:layout_marginBottom="5dp"

        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="245dp" />

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Find dooners"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:background="@drawable/back_raj"
        android:id="@+id/finditid"
        android:layout_marginTop="5dp"
        />


</LinearLayout>